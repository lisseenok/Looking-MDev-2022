<?xml version="1.0" encoding="utf-8"?>
<resources>
<!--    style for toolbars text -->
    <style name="ToolbarText">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/toolbarTextColor</item>
    </style>

<!--    style for FiltersText -->
    <style name="FiltersTextView">
        <item name="android:paddingStart">15dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textColor">?attr/filterTextColor</item>
<!--        <item name="android:textColorHint">?attr/filterTextColor</item>-->
        <item name="fontFamily">sans-serif</item>
    </style>
</resources>