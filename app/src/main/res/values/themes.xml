<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->


    <!-- здесь мы пропишем атрибуты для тем -->
    <attr name="filterPersons" format="color|reference" />
    <attr name="filterLine" format="color|reference" />
    <attr name="filterTextColor" format="color|reference" />
    <attr name="toolbarTextColor" format="color|reference"/>
    <attr name="enteredTextColor" format="color|reference"/>
    <attr name="backgroundHostelsColor" format="color|reference"/>
    <attr name="hostelCardBackgroundColor" format="color|reference"/>
    <attr name="blockedButtonColor" format="color|reference"/>
<!--    <attr name="myFavoriteColor" format="color|reference" />-->

    <style name="Theme.LookingMDev" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="background">@color/white</item>
        <item name="colorOnBackground">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>

        <!-- наши цвета -->
        <item name="filterPersons">@color/filterPersonsLight</item>
        <item name="filterLine">@color/greyLine</item>
        <item name="filterTextColor">@color/filterTextColorLight</item>

        <item name="toolbarTextColor">@color/toolbarColorLight</item>

        <item name="enteredTextColor">@color/enteredTextColorLight</item>

        <item name="backgroundHostelsColor">@color/backgroundHostelsColorLight</item>

        <item name="hostelCardBackgroundColor">@color/hostelCardBackgroundColorLight</item>

        <item name="blockedButtonColor">@color/blockedButtonColorLight</item>


    </style>
</resources>